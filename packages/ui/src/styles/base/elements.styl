.uie
  height 100%
  line-height 1.5
  font-family var(--uie-font-family-light)
  @media print
    font-size 10pt
  @media $mq-up_to_m
    font-size 14px
  @media $mq-m_to_l
    font-size 15px
  @media $mq-l_and_up
    font-size 16px

  *
    margin 0
    padding 0
    border 0
    box-sizing border-box
    vertical-align baseline

  @media (prefers-reduced-motion: reduce)
    *
      animation none !important
      transition none !important

  body
    height 100%

  h1
  h2
  h3
    font-family var(--uie-font-family-bold)
    font-weight 400

  h1
    font-size var(--uie-font-size-xl)
    line-height 1.25

  h2
    font-size var(--uie-font-size-l)
    line-height 1.35

  h3
    font-size var(--uie-font-size-m)

  h4
  h5
  h6
    font-family var(--uie-font-family-regular)
    font-size var(--uie-font-size-m)
    font-weight normal

  em,
  strong
    font-style normal
    font-weight normal

  em
    font-family var(--uie-font-family-lightitalic)

  strong
    font-family var(--uie-font-family-bold)

  em strong,
  strong em
    font-family var(--uie-font-family-bolditalic)

  table
    border-collapse collapse

    caption
      font-family var(--uie-font-family-regular)
      font-size var(--uie-font-size-m)
      text-align left
      margin-bottom var(--uie-space-s)

    th
      color var(--uie-color-secondary-text)
      text-align left
      border-bottom 1px solid var(--uie-color-border-medium)
      font-family var(--uie-font-family-light)
      font-size var(--uie-font-size-xs)
      font-weight normal

    td
      border-bottom 1px solid var(--uie-color-border-light)
      font-size var(--uie-font-size-s)

    th,
    td
      padding var(--uie-space-xs) var(--uie-space-m)
      &:first-child
        padding-left 0
      &:last-child
        padding-right 0

  mark
    padding var(--uie-space-xxs) var(--uie-space-xs)
    border-radius var(--uie-space-xs)
    background-color var(--uie-color-accent-light)

  code
    code()
    padding var(--uie-space-xxs) var(--uie-space-xs)
    border-radius var(--uie-space-xs)
    background-color var(--uie-color-bg-light)

  pre
    code()
    overflow-x auto
    // defaults, will be overriden by hljs
    color var(--uie-color-code-text)
    background-color var(--uie-color-code-bg)
    // use important to override hljs styling which differs per theme
    padding var(--uie-space-m) !important
    // reset inline code styles when nested in pre
    code
      padding 0
      border-radius none
      background-color transparent
