@require "base/settings"
@require "base/fonts"
@require "base/elements"

.uie
  color var(--uie-color-main-text)
  background var(--uie-color-main-bg)

.uie-html-sketchapp-export
  padding 20px

  &__section + &__section
    margin-top var(--uie-space-xxxl)

  &__article + &__article
    margin-top var(--uie-space-xxl)

.uie-tokens
  &__category + &__category
    margin-top var(--uie-space-xxxl)

  &__title
    margin-bottom var(--uie-space-m)
    font-family var(--uie-font-family-regular)
    font-size var(--uie-font-size-m)
    font-weight var(--uie-font-weight-regular)

  &__container
    &--color
      display flex
      flex-wrap wrap

.uie-token
  &__color
    width 100%
    height 40px

.uie-color-token
  flex 0 0 22.5rem
  margin-bottom var(--uie-space-xl)
  padding-right var(--uie-space-xxl)

  &__swatch
    display inline-block
    width 4.5rem
    height 4.5rem
    border-radius 50%
    border-bottom-right-radius 0 !important
    border 1px solid var(--uie-color-border-medium)
    padding 2px

    &__inner
      width 100%
      height 100%
      border-radius 50%
      border-bottom-right-radius 0 !important

  &__info
    display flex

    &--top
      align-items flex-end
      margin-bottom var(--uie-space-m)

  &__info + &__info
    margin-top var(--uie-space-xs)

  &__label,
  &__example
    flex 0 0 5.75rem
    padding-right var(--uie-space-m)
    text-align right

  &__name
    flex 1
    font-family var(--uie-font-family-regular)
    font-weight var(--uie-font-weight-regular)

  &__label
    padding-top calc(var(--uie-font-size-s) - var(--uie-font-size-xs))
    color var(--uie-color-secondary-text)
    font-family var(--uie-font-family-light)
    font-size var(--uie-font-size-xs)
    font-weight var(--uie-font-weight-light)

  &__value
    flex 1
    font-size var(--uie-font-size-s)

    &--code
      font-family var(--uie-font-family-code)

.uie-size-token
  &__size
    position relative
    bottom -.15em
    display inline-block
    height 1.2em
    border 1px solid var(--uie-color-accent-medium)
    background-color var(--uie-color-accent-extralight)

.uie-font-token
  + .uie-font-token
    margin-top var(--uie-space-xxl)

  &__info
    display flex

    &--top
      align-items flex-end
      margin-bottom var(--uie-space-m)

    &--example
      margin-bottom var(--uie-space-m)

  &__info + &__info
    margin-top var(--uie-space-xs)

  &__label
    flex 0 0 5.75rem
    text-align right
    padding-top calc(var(--uie-font-size-s) - var(--uie-font-size-xs))
    padding-right var(--uie-space-m)
    color var(--uie-color-secondary-text)
    font-family var(--uie-font-family-light)
    font-size var(--uie-font-size-xs)
    font-weight var(--uie-font-weight-light)

  &__value
    flex 1
    font-size var(--uie-font-size-s)

    &--code
      font-family var(--uie-font-family-code)

  &__example
    font-size 1rem

.uie-icon-token,
.uie-default-token
  &__value
    vertical-align middle
    &--value,
    &--variable
      font-family var(--uie-font-family-code)

.uie-theme-token
  &__variablename
    display inline-block
    margin-top var(--uie-space-xs)

  &__value
    &--value
      font-family var(--uie-font-family-code)
    &--variable
      font-family var(--uie-font-family-code)
      white-space nowrap
    &--default
      text-align center

  &__swatch
    display inline-block
    width 1.2em
    height 1.2em
    margin-right var(--uie-space-xs)
    border-radius 50%
    border-bottom-right-radius 0 !important
    border 1px solid var(--uie-color-border-medium)
    padding 2px

    &__inner
      display block
      width 100%
      height 100%
      border-radius 50%
      border-bottom-right-radius 0 !important

  &__size
    position relative
    bottom -.15em
    display inline-block
    height 1.2em
    border 1px solid var(--uie-color-accent-medium)
    background-color var(--uie-color-accent-extralight)

.uie-theme-token__value--property,
.uie-theme-token__value--description,
.uie-tokens__container--theme tbody tr:last-child td
  border-bottom-color var(--uie-color-border-medium) !important
